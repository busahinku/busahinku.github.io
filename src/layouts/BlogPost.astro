---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";
import { useTranslations, type Lang } from "../i18n/translations";

interface Props {
  post: CollectionEntry<"blog">["data"];
  lang?: Lang;
}

const { post, lang = "en" } = Astro.props;
const { title, description, pubDate, updatedDate, heroImage } = post;
const t = useTranslations(lang);
---

<html lang={lang}>
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Header lang={lang} />
    <main>
      <article>
        {
          heroImage && (
            <div class="hero-image">
              <Image width={1020} height={510} src={heroImage} alt={title} />
            </div>
          )
        }
        <div class="prose">
          <div class="article-header">
            <div class="meta">
              <span class="date">
                {t("blog.publishedOn")}
                <FormattedDate date={pubDate} />
              </span>
              {
                updatedDate && (
                  <span class="updated">
                    {t("blog.updatedOn")} <FormattedDate date={updatedDate} />
                  </span>
                )
              }
            </div>
            <h1>{title}</h1>
            <p class="description">{description}</p>
          </div>
          <hr />
          <div class="content">
            <slot />
          </div>
        </div>
      </article>
    </main>
    <Footer lang={lang} />
  </body>
</html>

<style>
  main {
    width: 100%;
    max-width: 100%;
    margin: 0;
  }

  article {
    width: 100%;
  }

  .hero-image {
    width: 100%;
    max-height: 400px;
    overflow: hidden;
  }

  .hero-image img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .prose {
    width: 100%;
    max-width: 720px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .article-header {
    margin-bottom: 2rem;
  }

  .meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .date,
  .updated {
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  .updated {
    font-style: italic;
  }

  h1 {
    margin: 0 0 0.5rem 0;
    font-size: 2.5rem;
    line-height: 1.2;
  }

  .description {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin: 0;
  }

  hr {
    margin: 2rem 0;
  }

  .content {
    font-size: 1.125rem;
    line-height: 1.8;
  }

  .content :global(h2) {
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .content :global(h3) {
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .content :global(p) {
    margin-bottom: 1.5rem;
  }

  .content :global(ul),
  .content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .content :global(li) {
    margin-bottom: 0.5rem;
  }

  .content :global(pre) {
    margin: 1.5rem 0;
  }

  .content :global(blockquote) {
    margin: 1.5rem 0;
  }

  @media (max-width: 640px) {
    h1 {
      font-size: 2rem;
    }

    .prose {
      padding: 1.5rem 1rem;
    }
  }
</style>
