---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import type { MarkdownHeading } from "astro";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import BlogHeader from "../components/blog/BlogHeader.astro";
import TableOfContents from "../components/blog/TableOfContents.astro";
import ViewCounter from "../components/blog/ViewCounter.astro";
import LikeButton from "../components/blog/LikeButton.astro";
import CommentSection from "../components/blog/CommentSection.astro";
import { useTranslations, type Lang } from "../i18n/translations";
import "../styles/blog-post.css";
import "../styles/firebase-components.css";

interface Props {
  post:
    | CollectionEntry<"blog">["data"]
    | CollectionEntry<"projects">["data"]
    | CollectionEntry<"courses">["data"];
  headings: MarkdownHeading[];
  lang?: Lang;
  slug: string;
  github?: string;
  demo?: string;
  backUrl?: string;
  backLabel?: string;
}

const {
  post,
  headings,
  lang = "en",
  slug,
  github,
  demo,
  backUrl,
  backLabel,
} = Astro.props;
const { title, description, pubDate, updatedDate, heroImage } = post;
const t = useTranslations(lang);
---

<html lang={lang}>
  <head>
    <BaseHead title={title} description={description} />
    <!-- KaTeX CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css"
      integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <!-- Progress bar at top -->
    <div class="reading-progress" id="readingProgress">
      <div class="reading-progress-bar" id="progressBar"></div>
    </div>

    <BlogHeader lang={lang} backUrl={backUrl} backLabel={backLabel} />

    <div class="blog-layout">
      <!-- Left: Table of Contents -->
      <TableOfContents headings={headings} lang={lang} />

      <!-- Center: Article Content -->
      <article class="article-container">
        {
          heroImage && (
            <div class="hero-image-wrapper">
              <Image width={900} height={400} src={heroImage} alt={title} />
            </div>
          )
        }

        <header class="article-header">
          <div class="article-meta">
            <span>
              {t("blog.publishedOn")}
              <FormattedDate date={pubDate} />
            </span>
            {
              updatedDate && (
                <span>
                  {t("blog.updatedOn")} <FormattedDate date={updatedDate} />
                </span>
              )
            }
          </div>
          <h2 class="article-title">{title}</h2>
          {description && <p class="article-description">{description}</p>}
          {
            (github || demo) && (
              <div class="project-links">
                {github && (
                  <a
                    href={github}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="project-link"
                  >
                    <svg
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      width="18"
                      height="18"
                    >
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                    </svg>
                    {t("projects.sourceCode")}
                  </a>
                )}
                {demo && (
                  <a
                    href={demo}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="project-link primary"
                  >
                    <svg
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      width="18"
                      height="18"
                    >
                      <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                      <polyline points="15 3 21 3 21 9" />
                      <line x1="10" y1="14" x2="21" y2="3" />
                    </svg>
                    {t("projects.liveDemo")}
                  </a>
                )}
              </div>
            )
          }
        </header>

        <hr class="article-divider" />

        <div class="article-content">
          <slot />
        </div>

        <!-- Post engagement section -->
        <div class="post-engagement">
          <div class="engagement-stats">
            <ViewCounter slug={slug} />
            <LikeButton slug={slug} />
          </div>
        </div>

        <hr class="article-divider" />

        <!-- Comments section -->
        <CommentSection slug={slug} lang={lang} />
      </article>

      <!-- Right: Empty spacer for symmetry -->
      <div class="blog-spacer"></div>
    </div>

    <Footer lang={lang} />
  </body>
</html>

<script>
  // Initialize text preferences on page load
  function initTextPreferences() {
    const html = document.documentElement;

    const font = localStorage.getItem("blog-font");
    const size = localStorage.getItem("blog-size");
    const lineHeight = localStorage.getItem("blog-line-height");
    const width = localStorage.getItem("blog-width");

    if (font && font !== "sans") {
      html.setAttribute("data-blog-font", font);
    }
    if (size && size !== "normal") {
      html.setAttribute("data-blog-size", size);
    }
    if (lineHeight && lineHeight !== "compact") {
      html.setAttribute("data-blog-line-height", lineHeight);
    }
    if (width && width !== "normal") {
      html.setAttribute("data-blog-width", width);
    }
  }

  // Enhance code blocks with language label and copy button
  function initCodeBlocks() {
    const codeBlocks = document.querySelectorAll(".article-content pre");

    codeBlocks.forEach((pre) => {
      // Skip if already enhanced
      if (pre.parentElement?.classList.contains("code-block-wrapper")) return;

      // Get the code element
      const code = pre.querySelector("code");
      if (!code) return;

      // Detect language from data-language attribute
      const language = pre.getAttribute("data-language") || "";

      // Create wrapper
      const wrapper = document.createElement("div");
      wrapper.className = "code-block-wrapper";

      // Create meta container (language + copy)
      const meta = document.createElement("div");
      meta.className = "code-block-meta";

      // Language label (only if language detected)
      if (language) {
        const langLabel = document.createElement("span");
        langLabel.className = "code-block-language";
        langLabel.textContent = language;
        meta.appendChild(langLabel);
      }

      // Copy button
      const copyBtn = document.createElement("button");
      copyBtn.className = "code-copy-btn";
      copyBtn.textContent = "Copy";

      copyBtn.addEventListener("click", async () => {
        const text = code.textContent || "";
        try {
          await navigator.clipboard.writeText(text);
          copyBtn.classList.add("copied");
          copyBtn.textContent = "Copied!";
          setTimeout(() => {
            copyBtn.classList.remove("copied");
            copyBtn.textContent = "Copy";
          }, 2000);
        } catch (err) {
          console.error("Failed to copy:", err);
        }
      });

      meta.appendChild(copyBtn);

      // Assemble structure
      pre.parentNode?.insertBefore(wrapper, pre);
      wrapper.appendChild(meta);
      wrapper.appendChild(pre);
    });
  }

  // Handle external links to open in new tab
  function handleExternalLinks() {
    const links = document.querySelectorAll(".article-content a");
    links.forEach((link) => {
      const anchor = link as HTMLAnchorElement;
      if (
        anchor.hostname !== window.location.hostname &&
        anchor.hostname !== ""
      ) {
        anchor.setAttribute("target", "_blank");
        anchor.setAttribute("rel", "noopener noreferrer");
      }
    });
  }

  // Run immediately to prevent flash
  initTextPreferences();
  initCodeBlocks();
  handleExternalLinks();

  // Re-run on navigation
  document.addEventListener("astro:after-swap", () => {
    initTextPreferences();
    initCodeBlocks();
    handleExternalLinks();
  });
</script>
