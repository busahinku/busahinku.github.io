---
import { Image } from "astro:assets";
import { X, ChevronLeft, ChevronRight, ZoomIn } from "@lucide/astro";
import type { ImageMetadata } from "astro";

interface GalleryImage {
  src: ImageMetadata;
  alt: string;
  caption?: string;
}

interface Props {
  images: GalleryImage[];
  columns?: 2 | 3 | 4;
  layout?: "grid" | "masonry";
}

const { images, columns = 3, layout = "grid" } = Astro.props;
const galleryId = `gallery-${Math.random().toString(36).slice(2, 9)}`;
---

<div class="photo-gallery" data-gallery={galleryId} data-layout={layout}>
  <div class="gallery-grid" data-columns={columns}>
    {
      images.map((image, index) => (
        <button
          class="gallery-item"
          data-gallery-item
          data-index={index}
          data-caption={image.caption || ""}
          data-full-src={image.src.src}
          aria-label={`View ${image.alt}`}
        >
          <div class="gallery-item-inner">
            <Image
              src={image.src}
              alt={image.alt}
              width={800}
              quality="max"
              height={layout === "masonry" ? undefined : 600}
              loading="lazy"
              class="gallery-image"
            />
            <div class="gallery-overlay">
              <ZoomIn size={24} class="gallery-zoom-icon" />
              {image.caption && (
                <span class="gallery-caption-preview">{image.caption}</span>
              )}
            </div>
          </div>
        </button>
      ))
    }
  </div>

  <!-- Lightbox -->
  <div
    class="lightbox"
    id={`lightbox-${galleryId}`}
    data-lightbox
    aria-hidden="true"
  >
    <div class="lightbox-backdrop" data-lightbox-backdrop></div>

    <button class="lightbox-close" data-lightbox-close aria-label="Close">
      <X size={24} />
    </button>

    <div class="lightbox-container">
      <!-- Desktop nav -->
      <button
        class="lightbox-nav lightbox-prev desktop-nav"
        data-lightbox-prev
        aria-label="Previous"
      >
        <ChevronLeft size={32} />
      </button>

      <div class="lightbox-main">
        <div class="lightbox-image-wrapper" data-lightbox-wrapper>
          <img class="lightbox-image" data-lightbox-image src="" alt="" />
        </div>
        <div class="lightbox-footer" data-lightbox-footer>
          <p class="lightbox-caption" data-lightbox-caption></p>
          <span class="lightbox-counter" data-lightbox-counter></span>
        </div>
        <!-- Mobile nav -->
        <div class="lightbox-mobile-nav">
          <button
            class="lightbox-nav mobile-nav"
            data-lightbox-prev
            aria-label="Previous"
          >
            <ChevronLeft size={28} />
          </button>
          <button
            class="lightbox-nav mobile-nav"
            data-lightbox-next
            aria-label="Next"
          >
            <ChevronRight size={28} />
          </button>
        </div>
      </div>

      <!-- Desktop nav -->
      <button
        class="lightbox-nav lightbox-next desktop-nav"
        data-lightbox-next
        aria-label="Next"
      >
        <ChevronRight size={32} />
      </button>
    </div>
  </div>
</div>

<script>
  function initAllGalleries() {
    document
      .querySelectorAll<HTMLElement>(".photo-gallery[data-gallery]")
      .forEach((gallery) => {
        // Skip if already initialized
        if (gallery.dataset.initialized) return;
        gallery.dataset.initialized = "true";

        const galleryId = gallery.dataset.gallery;
        const lightbox = gallery.querySelector(
          "[data-lightbox]",
        ) as HTMLElement;
        const lightboxImage = gallery.querySelector(
          "[data-lightbox-image]",
        ) as HTMLImageElement;
        const lightboxCaption = gallery.querySelector(
          "[data-lightbox-caption]",
        );
        const lightboxCounter = gallery.querySelector(
          "[data-lightbox-counter]",
        );
        const closeBtn = gallery.querySelector("[data-lightbox-close]");
        const items = gallery.querySelectorAll("[data-gallery-item]");

        if (!lightbox || !lightboxImage || !items.length) return;

        let currentIndex = 0;
        const totalImages = items.length;

        // Get image src from the actual img elements in the gallery
        const getImageSrc = (index: number) => {
          const item = items[index] as HTMLElement;
          const fullSrc = item.dataset.fullSrc;
          if (fullSrc) return fullSrc;

          const img = item?.querySelector("img");
          return img?.src || "";
        };

        const getImageAlt = (index: number) => {
          const item = items[index];
          const img = item?.querySelector("img");
          return img?.alt || "";
        };

        const getImageCaption = (index: number) => {
          const item = items[index] as HTMLElement;
          return item?.dataset.caption || "";
        };

        const showImage = (index: number) => {
          currentIndex = index;
          lightboxImage.src = getImageSrc(index);
          lightboxImage.alt = getImageAlt(index);

          const caption = getImageCaption(index);
          if (lightboxCaption) {
            lightboxCaption.textContent = caption;
          }

          if (lightboxCounter) {
            lightboxCounter.textContent = `${index + 1} / ${totalImages}`;
          }
        };

        const openLightbox = (index: number) => {
          showImage(index);
          lightbox.classList.add("open");
          lightbox.setAttribute("aria-hidden", "false");
          document.body.style.overflow = "hidden";
        };

        const closeLightbox = () => {
          lightbox.classList.remove("open");
          lightbox.setAttribute("aria-hidden", "true");
          document.body.style.overflow = "";
        };

        const showPrev = () => {
          const newIndex =
            currentIndex === 0 ? totalImages - 1 : currentIndex - 1;
          showImage(newIndex);
        };

        const showNext = () => {
          const newIndex =
            currentIndex === totalImages - 1 ? 0 : currentIndex + 1;
          showImage(newIndex);
        };

        // Event listeners for gallery items
        items.forEach((item, index) => {
          item.addEventListener("click", (e) => {
            e.preventDefault();
            openLightbox(index);
          });
        });

        // Close button
        closeBtn?.addEventListener("click", closeLightbox);

        // Navigation buttons (both desktop and mobile)
        gallery.querySelectorAll("[data-lightbox-prev]").forEach((btn) => {
          btn.addEventListener("click", (e) => {
            e.stopPropagation();
            showPrev();
          });
        });

        gallery.querySelectorAll("[data-lightbox-next]").forEach((btn) => {
          btn.addEventListener("click", (e) => {
            e.stopPropagation();
            showNext();
          });
        });

        // Close on backdrop click
        lightbox.addEventListener("click", (e) => {
          const target = e.target as HTMLElement;
          if (
            target === lightbox ||
            target.classList.contains("lightbox-backdrop") ||
            target.classList.contains("lightbox-container") ||
            target.classList.contains("lightbox-main") ||
            target.classList.contains("lightbox-image-wrapper")
          ) {
            closeLightbox();
          }
        });

        // Prevent image click from closing
        lightboxImage.addEventListener("click", (e) => {
          e.stopPropagation();
        });

        // Keyboard navigation
        document.addEventListener("keydown", (e) => {
          if (!lightbox.classList.contains("open")) return;

          switch (e.key) {
            case "Escape":
              closeLightbox();
              break;
            case "ArrowLeft":
              showPrev();
              break;
            case "ArrowRight":
              showNext();
              break;
          }
        });
      });
  }

  // Run on load
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initAllGalleries);
  } else {
    initAllGalleries();
  }

  // Re-run on Astro navigation
  document.addEventListener("astro:after-swap", () => {
    // Reset initialized state for new content
    document
      .querySelectorAll<HTMLElement>(".photo-gallery[data-gallery]")
      .forEach((g) => {
        delete g.dataset.initialized;
      });
    initAllGalleries();
  });
</script>

<style>
  /* Gallery Grid - Minimal */
  .photo-gallery {
    margin: 0 0 1.5rem 0;
  }

  .gallery-grid {
    display: grid;
    gap: 0.5rem;
  }

  .gallery-grid[data-columns="2"] {
    grid-template-columns: repeat(2, 1fr);
  }

  .gallery-grid[data-columns="3"] {
    grid-template-columns: repeat(3, 1fr);
  }

  .gallery-grid[data-columns="4"] {
    grid-template-columns: repeat(4, 1fr);
  }

  @media (max-width: 768px) {
    .gallery-grid[data-columns="3"],
    .gallery-grid[data-columns="4"] {
      grid-template-columns: repeat(2, 1fr);
    }

    .gallery-grid {
      gap: 0.25rem;
    }
  }

  @media (max-width: 480px) {
    .gallery-grid {
      grid-template-columns: repeat(2, 1fr) !important;
    }
  }

  /* Gallery Item - Simple */
  .gallery-item {
    position: relative;
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    overflow: hidden;
    border-radius: 0.25rem;
    aspect-ratio: 1;
  }

  .photo-gallery[data-layout="masonry"] .gallery-item {
    aspect-ratio: auto;
  }

  .gallery-item-inner {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .gallery-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.2s ease;
  }

  .gallery-item:hover .gallery-image {
    opacity: 0.9;
  }

  /* Hide overlay elements */
  .gallery-overlay {
    display: none;
  }

  .gallery-zoom-icon,
  .gallery-caption-preview {
    display: none;
  }

  /* Lightbox - Clean */
  .lightbox {
    position: fixed;
    inset: 0;
    z-index: 2000;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.2s ease,
      visibility 0.2s ease;
  }

  .lightbox.open {
    opacity: 1;
    visibility: visible;
  }

  .lightbox-backdrop {
    position: absolute;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.92);
  }

  .lightbox-container {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    max-width: 90vw;
    height: 100%;
    max-height: 90vh;
    padding: 1rem;
    z-index: 1;
  }

  .lightbox-main {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 100%;
    max-height: 100%;
  }

  .lightbox-image-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    max-height: calc(90vh - 60px);
  }

  .lightbox-image {
    max-width: 100%;
    max-height: calc(90vh - 80px);
    object-fit: contain;
  }

  .lightbox-footer {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    width: 100%;
    margin-top: 0.75rem;
    padding: 0 1rem;
  }

  .lightbox-caption {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.875rem;
    margin: 0;
  }

  .lightbox-counter {
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.8125rem;
  }

  .lightbox-close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    width: 2.5rem;
    height: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: none;
    color: rgba(255, 255, 255, 0.7);
    cursor: pointer;
    transition: color 0.2s ease;
    z-index: 10;
  }

  .lightbox-close:hover {
    color: white;
  }

  .lightbox-nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 3rem;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: none;
    color: rgba(255, 255, 255, 0.7);
    cursor: pointer;
    transition: color 0.2s ease;
    z-index: 10;
  }

  .lightbox-nav:hover {
    color: white;
  }

  .lightbox-prev {
    left: 1rem;
  }

  .lightbox-next {
    right: 1rem;
  }

  @media (max-width: 768px) {
    .lightbox-nav {
      width: 2.5rem;
      height: 2.5rem;
    }

    .lightbox-prev {
      left: 0.25rem;
    }

    .lightbox-next {
      right: 0.25rem;
    }

    .lightbox-footer {
      flex-direction: column;
      gap: 0.25rem;
    }
  }

  /* Mobile nav hidden on desktop */
  .lightbox-mobile-nav {
    display: none;
  }

  @media (max-width: 768px) {
    .gallery-grid {
      gap: 0.25rem;
    }

    .gallery-item {
      border-radius: 0.25rem;
    }

    /* Hide desktop nav on mobile */
    .desktop-nav {
      display: none;
    }

    /* Show mobile nav */
    .lightbox-mobile-nav {
      display: flex;
      justify-content: center;
      gap: 2rem;
      margin-top: 1rem;
    }

    .lightbox-mobile-nav .lightbox-nav {
      position: static;
      transform: none;
      width: 3rem;
      height: 3rem;
      background-color: rgba(255, 255, 255, 0.1);
      border-radius: 50%;
    }

    .lightbox-image {
      max-height: calc(100vh - 200px);
    }

    .lightbox-footer {
      flex-direction: column;
      gap: 0.25rem;
    }
  }
</style>
