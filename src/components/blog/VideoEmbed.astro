---
import { useTranslations, type Lang } from '../../i18n/translations';

interface Props {
  url: string;
  title?: string;
  lang?: Lang;
}

const { url, title, lang = 'en' } = Astro.props;
const t = useTranslations(lang);

// Parse video URL to get embed URL
function getEmbedUrl(videoUrl: string): { embedUrl: string | null; platform: string | null } {
  try {
    const urlObj = new URL(videoUrl);
    const hostname = urlObj.hostname.toLowerCase();

    // YouTube
    if (hostname.includes('youtube.com') || hostname.includes('youtu.be')) {
      let videoId: string | null = null;

      if (hostname.includes('youtu.be')) {
        // Short URL: https://youtu.be/VIDEO_ID
        videoId = urlObj.pathname.slice(1);
      } else if (urlObj.pathname.includes('/watch')) {
        // Standard URL: https://www.youtube.com/watch?v=VIDEO_ID
        videoId = urlObj.searchParams.get('v');
      } else if (urlObj.pathname.includes('/embed/')) {
        // Already embed URL: https://www.youtube.com/embed/VIDEO_ID
        videoId = urlObj.pathname.split('/embed/')[1]?.split('?')[0];
      }

      if (videoId) {
        // Use privacy-enhanced embed
        return {
          embedUrl: `https://www.youtube-nocookie.com/embed/${videoId}`,
          platform: 'YouTube'
        };
      }
    }

    // Vimeo
    if (hostname.includes('vimeo.com')) {
      let videoId: string | null = null;

      if (urlObj.pathname.includes('/video/')) {
        // Embed URL: https://vimeo.com/video/VIDEO_ID
        videoId = urlObj.pathname.split('/video/')[1]?.split('?')[0];
      } else {
        // Standard URL: https://vimeo.com/VIDEO_ID
        videoId = urlObj.pathname.slice(1).split('/')[0];
      }

      if (videoId && /^\d+$/.test(videoId)) {
        return {
          embedUrl: `https://player.vimeo.com/video/${videoId}`,
          platform: 'Vimeo'
        };
      }
    }

    return { embedUrl: null, platform: null };
  } catch {
    return { embedUrl: null, platform: null };
  }
}

const { embedUrl, platform } = getEmbedUrl(url);
---

<div class="video-embed">
  {embedUrl ? (
    <>
      <div class="video-container">
        <iframe
          src={embedUrl}
          title={title || `${platform} video`}
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
          loading="lazy"
        ></iframe>
      </div>
      {title && <p class="video-title">{title}</p>}
    </>
  ) : (
    <div class="video-error">
      {t('blog.videoError')}
    </div>
  )}
</div>
