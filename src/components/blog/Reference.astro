---
interface ReferenceItem {
  id: string;
  authors?: string;
  title: string;
  source?: string;
  year?: string | number;
  url?: string;
}

interface Props {
  references: ReferenceItem[];
}

const { references } = Astro.props;
---

<div class="references">
  <h3 class="references-title">References</h3>
  <ol class="references-list">
    {references.map((ref) => (
      <li id={`ref-${ref.id}`} class="reference-item">
        <span class="reference-content">
          {ref.authors && <span class="reference-authors">{ref.authors}</span>}
          {ref.year && <span class="reference-year">({ref.year})</span>}
          {ref.url ? (
            <a href={ref.url} target="_blank" rel="noopener noreferrer" class="reference-title">
              {ref.title}
            </a>
          ) : (
            <span class="reference-title">{ref.title}</span>
          )}
          {ref.source && <span class="reference-source">{ref.source}</span>}
        </span>
        <a href={`#cite-${ref.id}`} class="reference-backlink" title="Back to citation">â†©</a>
      </li>
    ))}
  </ol>
</div>

<style>
  .references {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .references-title {
    font-family: var(--blog-heading-font);
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .references-list {
    list-style-type: decimal;
    padding-left: 1.5rem;
    margin: 0;
  }

  .reference-item {
    margin-bottom: 0.75rem;
    font-size: 0.9375rem;
    line-height: 1.6;
    color: var(--text-secondary);
  }

  .reference-content {
    display: inline;
  }

  .reference-authors {
    font-weight: 500;
  }

  .reference-authors::after {
    content: ' ';
  }

  .reference-year {
    color: var(--text-muted);
  }

  .reference-year::after {
    content: '. ';
  }

  .reference-title {
    font-style: italic;
  }

  a.reference-title {
    color: var(--accent);
    text-decoration: none;
  }

  a.reference-title:hover {
    text-decoration: underline;
  }

  .reference-title::after {
    content: '. ';
    font-style: normal;
  }

  .reference-source {
    color: var(--text-muted);
  }

  .reference-backlink {
    margin-left: 0.5rem;
    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.875rem;
  }

  .reference-backlink:hover {
    color: var(--accent);
  }

  @media (max-width: 768px) {
    .references {
      margin-top: 2rem;
      padding-top: 1.5rem;
    }

    .reference-item {
      font-size: 0.875rem;
    }
  }
</style>
